  <!-- Core Protocol Definition -->
  <protocol_identity>
    <name>PKM 5-Point Chat Startup Protocol - Enhanced</name>
    <version>4.0 - Enhanced with Project Knowledge Integration</version>
    <purpose>Systematic human-AI knowledge coordination with automatic project knowledge management</purpose>
